@using System.DirectoryServices.AccountManagement
@using System.DirectoryServices
@using System.Security.Claims
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/bootstrap-reboot.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/dd.css" />
    <link rel="stylesheet" href="~/css/trumbowyg.min.css" />
    <link rel="stylesheet" href="~/css/jquery.datetimepicker.css" />
    @*<link rel="stylesheet" href="~/css/trumbowyg.colors.css" />*@
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <script src="/js/jquery.min.js"></script>
</head>
<body style="background-color:#f7f7f7">
    <nav class="navbar navbar-dark bg-dark shadow navbar-expand-sm" id="topheader">
        <a class="navbar-brand" href="#">
            <img src="~/img/logo.png" width="31" height="39" class="d-inline-block align-top" alt=""> SA Workplace
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item" id="navHome">
                    <a class="nav-link" href="#">Requests</a>
                </li>
                <li class="nav-item" id="navAll">
                    <a class="nav-link" href="#">Allocation</a>
                </li>
            </ul>
        </div>
        @{
            var userName = "";
            try
            {
                using (var context = new PrincipalContext(ContextType.Domain, "CORP"))
                {
                    var SA = UserPrincipal.FindByIdentity(context, Context.User.Identity.Name);
                    if (SA != null)
                    {
                        userName = string.Format("{0} {1}", SA.GivenName, SA.Surname);
                    }
                }
            }
            catch { userName = "Unknown User"; }
        }
        <div class="text-right">
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        @userName
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Link 1</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <br />
    <div class="container-fluid">
        <main role="main" class="pb-3" id="main" name="main">
            @RenderBody()
        </main>
    </div>
    <br />
    <footer class="border-top footer text-muted col-md-12">
        <div class="container-fluid" style="align-content:center">
            &copy; 2019 - iPipline SA Workplace
        </div>
    </footer>
    <script src="~/js/popper.js"></script>
    <script src="~/js/modernizr.js"></script>
    <script src="/js/jquery-ui.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/validator.js"></script>
    <script src="~/js/bootstrap-select.js"></script>
    <script src="~/js/msdropdown.min.js"></script>
    <script src="~/js/trumbowyg.min.js"></script>
    <script src="~/js/jquery.datetimepicker.js"></script>
    <script src="~/js/trumbowyg.colors.min.js"></script>
    <script>
        $('#topheader .mt-lg-0 a').on('click', function () {
            $('#topheader .mt-lg-0').find('li.active').removeClass('active');
            $(this).parent('li').addClass('active');
        });
    </script>
</body>
</html>
