
<script>
    $('#Document').on('change', function () {
        //get the file name
        var fileName = $(this).val();
        //replace the "Choose a file" label
        fileName = fileName.substring(fileName.lastIndexOf("\\") + 1, fileName.length);
        $(this).next('#documentLabel').html(fileName);
    });
</script>
<input type="hidden" value="@Model" id="ticketNum" name="ticketNum"/>

<div class="row" id="AddDocumentContainer">
    <div class="form-group col-12">
        <label for="DocumentType" class="col-form-label-sm">Document Type</label>
        <div class="input-group input-group-sm mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroupPrepend"><i class="material-icons md-18">file_copy</i></span>
            </div>
            <select name="DocumentType" id="DocumentType" class="form-control" required="required">
                <option value="">--Choose your Document Type--</option>
                <option value="Web Service Review">Web Service Review</option>
                <option value="Web Service Load Test">Web Service Load Test</option>
                <option value="SOW/Change Request">SOW/Change Request</option>
                <option value="Questionaire">Initiation Questionaire</option>
                <option value="Workflow">Workflow</option>
            </select>
        </div>
    </div>
    <div class="form-group col-12">
        <label class="col-form-label-sm">New Document</label>
        <div class="custom-file">
            <input type="file" id="Document" name="Document" class="custom-file-input" accept=".docx" placeholder="Please choose your Document..." required>
            <label class="custom-file-label" id="documentLabel" name="documentLabel" for="NewDocument">Please Upload your Document</label>
        </div>
    </div>
</div>